{
  "version": 2,
  "builds": [
    {
      "src": "frontend/myLogicAgent/package.json",
      "use": "@vercel/static-build"
    },
    {
      // Vercel detectar√° el package.json dentro del src
      "src": "backend/package.json", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.ts"
    },
    {
      "src": "/chatbot/(.*)",
      "dest": "backend/index.ts"
    },
    {
      "src": "/diagram/(.*)",
      "dest": "backend/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/myLogicAgent/dist/$1"
    }
  ]
}